<UserControl x:Class="GeosEnterprise.Views.ComputersList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeosEnterprise.Views"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="860">

    <Grid Background="LightCoral" Margin="0,0,0,-0.4">
        
        <ListView Name="RepairsList" ItemsSource="{Binding Items}" Margin="0,1,-0.302,36.113">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}" Width="40"/>
                    <GridViewColumn Header="Data zgłoszenia" DisplayMemberBinding="{Binding CreatedDate}" Width="120"/>
                    <GridViewColumn Header="Numer seryjny" DisplayMemberBinding="{Binding Computer.SerialNumber}" Width="120"/>
                    <GridViewColumn Header="Opis" DisplayMemberBinding="{Binding Description}" Width="300"/>

                </GridView>
            </ListView.View>
        </ListView>
        <Button Name="AddButton" Content="Dodaj" Click="AddButton_Click" HorizontalAlignment="Left" Width="135" Height="36" VerticalAlignment="Bottom" FontSize="16" FontWeight="Bold"/>
        <Button Name="DeleteButton" Content="Usuń" Margin="135,0,0,0" Click="DeleteButton_Click" HorizontalAlignment="Left" Width="135" Height="36" VerticalAlignment="Bottom" RenderTransformOrigin="0.424,0.275" FontSize="16" FontWeight="Bold"/>
        <Button Name="EditButton" Content="Edytuj" Margin="270,0,0,0" HorizontalAlignment="Left" Width="135" Height="36" VerticalAlignment="Bottom" FontSize="16" FontWeight="Bold" Click="EditButton_Click"/>
        <Button Name="SearchOptions" Content="Opcje wyszukiwania" Margin="405,0,0,0" HorizontalAlignment="Left" Width="178" Height="37" VerticalAlignment="Bottom" FontSize="16" FontWeight="Bold" Click="SearchOptions_Click"/>
        <TextBox Name="SearchBar" Text="Wpisz numer seryjny lub opis..." HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="583,0,0,-1" VerticalAlignment="Bottom" TextWrapping="Wrap" Height="37" FontSize="17" FontWeight="Bold" Background="#FFDDDDDD" TextChanged="SearchBar_TextChanged" GotFocus="SearchBar_GotFocus"/>
    </Grid>
</UserControl>

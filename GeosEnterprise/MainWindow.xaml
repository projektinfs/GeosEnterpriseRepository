<Window x:Name="MainMenu" x:Class="GeosEnterprise.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:GeosEnterprise.ViewModels"
        xmlns:views="clr-namespace:GeosEnterprise.Views"
        xmlns:local="clr-namespace:GeosEnterprise"
        
        mc:Ignorable="d"
        Title="GeosEnterprise" Height="720" Width="1280">
    <Window.Resources>
        <viewmodels:AuthenticationViewModel x:Key="auth"/>
        <viewmodels:MainWindowViewModel x:Key="main"/>


        <DataTemplate x:Name="computersListTemplate" DataType="{x:Type viewmodels:ComputersListViewModel}">
            <views:ComputersList DataContext="{Binding}"></views:ComputersList>
        </DataTemplate>
        <DataTemplate x:Name="startPanelTemplate" DataType="{x:Type viewmodels:StartPanelViewModel}">
            <views:StartPanel DataContext="{Binding}"></views:StartPanel>
        </DataTemplate>
        <DataTemplate x:Name="authenticationPanelTemplate" DataType="{x:Type viewmodels:AuthenticationViewModel}">
            <views:AuthenticationPanel DataContext="{Binding}"></views:AuthenticationPanel>
        </DataTemplate>
        <DataTemplate x:Name="employeesListTemplate" DataType="{x:Type viewmodels:EmployeesListViewModel}">
            <views:EmployeesList DataContext="{Binding}"></views:EmployeesList>
        </DataTemplate>
        <DataTemplate x:Name="clientsListTemplate" DataType="{x:Type viewmodels:ClientsListViewModel}">
            <views:ClientsList DataContext="{Binding}"></views:ClientsList>
        </DataTemplate>
        <DataTemplate x:Name="accountantPanelTemplate" DataType="{x:Type viewmodels:AccountantPanelViewModel}">
            <views:AccountantPanel DataContext="{Binding}"></views:AccountantPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid x:Name="MainGrid" Margin="0,0,3.113,1.755">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="5">
            <DockPanel.Background>
                <ImageBrush ImageSource=".\Icons\pikselart.jpg"/>
            </DockPanel.Background>

            <Border Margin="6,6,6,9.8" Padding="10" 
                BorderBrush="White" BorderThickness="3,3,3,3" CornerRadius="4" >
                <Border.Background>
                    <ImageBrush ImageSource=".\Icons\newwallpaper.jpg"/>
                </Border.Background>
                <StackPanel x:Name="MenuPanel" IsEnabled="{Binding IsAuthenticated}">
                    
                    <Button x:Name="StartPanelButton" Margin="0,0,0,6" BorderBrush="White" Content="Panel startowy" FontSize="20" BorderThickness="3"  Click="StartPanelButton_Click" FontWeight="Bold" Foreground="White">
                        <Button.Background>
                            <ImageBrush ImageSource=".\Icons\text-background.png"/>
                        </Button.Background>
                    </Button>

                    <Button x:Name="ComputersListButton" Margin="0,0,0,6" BorderBrush="White" Content="Komputery" FontSize="20"  BorderThickness="3" Click="ComputersListButton_Click" FontWeight="Bold" Foreground="White">
                        <Button.Background>
                            <ImageBrush ImageSource=".\Icons\text-background.png"/>
                        </Button.Background>
                    </Button>

                    <Button x:Name="EmployeesListButton" Margin="0,0,0,6" BorderBrush="White" Content="Pracownicy" FontSize="20" BorderThickness="3" Click="EmployeesListButton_Click" FontWeight="Bold" Foreground="White">
                        <Button.Background>
                            <ImageBrush ImageSource=".\Icons\text-background.png"/>
                        </Button.Background>
                    </Button>

                    <Button x:Name="ClientsListButton" Margin="0,0,0,6" BorderBrush="White" Content="Klienci" FontSize="20" BorderThickness="3" Click="ClientsListButton_Click" FontWeight="Bold" Foreground="White">
                        <Button.Background>
                            <ImageBrush ImageSource=".\Icons\text-background.png"/>
                        </Button.Background>
                    </Button>

                    <Button x:Name="AccountantPanelButton" Margin="0,0,0,6" BorderBrush="White" Content="Transakcje" FontSize="20" BorderThickness="3" FontWeight="Bold" Click="AccountantPanelButton_Click" Foreground="White">
                        <Button.Background>
                            <ImageBrush ImageSource=".\Icons\text-background.png"/>
                        </Button.Background>
                    </Button>

                    <Label x:Name="UserName" Margin="0,0,0,6" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="{Binding Name}" Foreground="White" FontSize="20" BorderThickness="3" FontWeight="Bold" Height="42"/>
                    <Button x:Name="LogoutButton" Margin="0,0,0,0" BorderBrush="White" Content="Wyloguj się" FontSize="20" BorderThickness="3" Click="LogoutButton_Click" FontWeight="Bold" Foreground="White">
                        <Button.Background>
                            <ImageBrush ImageSource=".\Icons\text-background.png"/>
                        </Button.Background>
                    </Button>

                </StackPanel>

            </Border>
        </DockPanel>
        <ContentControl Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" Grid.RowSpan="5" Content="{Binding}">
            <ContentControl.Background>
                <ImageBrush ImageSource=".\Icons\pikselart.jpg"/>
            </ContentControl.Background>
        </ContentControl>
        
        <!--<local:MenuControl HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" Width="190"/>-->
    </Grid>
</Window>
